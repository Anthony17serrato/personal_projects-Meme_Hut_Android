<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_gravity="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.sackcentury.shinebuttonlib.ShineButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                app:allow_random_color="false"
                app:btn_color="@color/colorAccent"
                app:btn_fill_color="#ffea00"
                app:enable_flashing="false"
                app:siShape="@drawable/baseline_star_24" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Integer" />

            <com.sackcentury.shinebuttonlib.ShineButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                app:allow_random_color="false"
                app:btn_color="@color/colorAccent"
                app:btn_fill_color="#2962ff"
                app:enable_flashing="false"
                app:siShape="@drawable/round_sync_24" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Integer" />

            <com.sackcentury.shinebuttonlib.ShineButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                app:allow_random_color="false"
                app:btn_color="@color/colorAccent"
                app:btn_fill_color="#00bfa5"
                app:enable_flashing="false"
                app:siShape="@drawable/round_chat_bubble_24" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Integer" />

            <com.sackcentury.shinebuttonlib.ShineButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                app:allow_random_color="false"
                app:btn_color="@color/colorAccent"
                app:btn_fill_color="#ff1744"
                app:enable_flashing="false"
                app:siShape="@drawable/round_arrow_drop_down_circle_24" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:maxLines="5"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:fontFamily="@font/open_sans_light" />
    </LinearLayout>
</android.support.v7.widget.CardView>
